<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--we will use Appbar layout to hold toolbar and tablayout-->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="E-News"
            app:titleMarginStart="150dp"
            android:background="#c2161e"
            app:titleTextColor="#fff">

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <!--to get the views according to tab-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="132dp"
            android:layout_marginTop="126dp"
            android:id="@+id/logintv"
            android:textSize="30sp"
            tools:textColor="#000" />

        <TextView
            android:text="Username"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logintv"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="57dp"
            android:id="@+id/usertv" />

        <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/passtv"
            android:textColor="#000"
            android:layout_alignEnd="@+id/usertv"
            android:layout_alignStart="@+id/usertv" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:background="#f4b5b5"
            android:id="@+id/editText"
            android:layout_alignTop="@+id/usertv"
            android:layout_alignStart="@+id/logintv" />

        <Button
            android:text="Sign Up"
            android:background="#c2161e"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/buttonLOG"
            android:layout_marginTop="26dp"
            android:id="@+id/signupbtn" />

        <TextView
            android:text="Don't have an account?"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:id="@+id/textView4"
            android:layout_below="@+id/buttonLOG"
            android:layout_alignEnd="@+id/logintv" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="#f4b5b5"
            android:id="@+id/editText2"
            android:layout_alignTop="@+id/passtv"
            android:layout_alignStart="@+id/editText" />

        <Button
            android:text="Login"
            android:background="#c2161e"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/buttonLOG"
            android:layout_below="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
