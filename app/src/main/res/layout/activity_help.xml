<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--we will use Appbar layout to hold toolbar and tablayout-->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="E-News"
            app:titleMarginStart="150dp"
            android:background="#c2161e"
            app:titleTextColor="#fff">

        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:text="A help guide for users of version one of E-News app on Android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_tv"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/textView5" />

        <TextView
            android:text="How can I personalise my acccount?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/textView7" />

        <TextView
            android:text="Sign up if you dont have an account. filling up the form will help you personalise your own feed."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignEnd="@+id/textView7"

            android:layout_marginTop="35dp"
            android:id="@+id/textView8" />

        <TextView
            android:text="E-News app: Help guide for Android devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_marginTop="90dp"
            android:id="@+id/head_tv"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:id="@+id/textView10" />

        <TextView
            android:text="How does the app use my location?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_marginTop="66dp"
            android:id="@+id/textView11" />

        <TextView
            android:text="How can I find settings menu?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="53dp"
            android:id="@+id/textView12" />
    </RelativeLayout>
        </android.support.design.widget.CoordinatorLayout>